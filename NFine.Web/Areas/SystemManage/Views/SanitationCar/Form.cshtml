    </div>
</div>


<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">车辆作业明细</h4>
            </div>
            <div class="modal-body">
                <form id="formCarWorkItem">
                    <table class="form">
                        <tr hidden="hidden">
                            <td class="formValue">
                                <input id="id" name="id" type="text" class="form-control" />
                            </td>
                        </tr>
                        <tr>
                            <th class="formTitle">序号</th>
                            <td class="formValue">
                                <input id="Subscript" name="Subscript" type="text" class="form-control required number" placeholder="请输入序号" />
                            </td>
                        </tr>
                        <tr>
                            <th class="formTitle">工作时间</th>
                            <td class="formValue">
                                <input id="Time" name="Time" type="text" class="form-control" placeholder="请输入清扫时间" />
                            </td>
                        </tr>
                        <tr>
                            <th class="formTitle">工作点名称</th>
                            <td class="formValue">
                                <input id="RinseName" name="RinseName" type="text" class="form-control" placeholder="请输入清扫点名称" />
                            </td>
                        </tr>
                        <tr>
                            <th class="formTitle">工作点地址</th>
                            <td class="formValue">
                                <input id="RinseAddress" name="RinseAddress" type="text" class="form-control" placeholder="请输入清扫点地址" />
                            </td>
                        </tr>
                        <tr>
                            <th class="formTitle">备注</th>
                            <td class="formValue">
                                <input id="Note" name="Note" type="text" class="form-control" placeholder="请输入长度(米)" />
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" onclick="btn_submitCarWorkItemForm()">提交更改</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>

<script type="text/javascript">

    function btn_addWorkItem() {

        $("#Subscript").val("");
        $("#Time").val("");
        $("#RinseName").val("");
        $("#RinseAddress").val("");
        $("#Note").val("");
    }
    function btn_updateWorkItem() {
        var ckbs = $("input[name=ckb]:checked");
        if (ckbs.size() == 0) {
            alert("需选中要修改的行！");
            return;
        }

        //拿到第一个就行了
        ckbs.each(function () {
            trC = $(this).parent().parent();
            return false;
        });
        var model = new WorkItem();
        $(trC).children('td').each(function (j) {  // 遍历 tr 的各个 td

            if (j == 0)//取第0行的Id
            {
                model.id = $(this).text();
            }
            else if (j == 2)//取低2行Name
            {
                model.subscript = $(this).text();
            } else if (j == 3) {
                model.time = $(this).text();
            } else if (j == 4) {
                model.rinseName = $(this).text();
            }
            else if (j == 5) {
                model.rinseAddress = $(this).text();
            }
            else if (j == 6) {
                model.Note = $(this).text();
            }
        });
        $("#id").val(model.id);
        $("#Subscript").val(model.subscript);
        $("#Time").val(model.time);
        $("#RinseName").val(model.rinseName);
        $("#RinseAddress").val(model.rinseAddress);
        $("#Note").val(model.Note);
    }
    function btn_submitCarWorkItemForm() {
        if (!$('#formCarWorkItem').formValid()) {
            return false;
        }

        $('#myModal').modal('hide');
        
        if ($("#id").val() == "") {//添加
            var trHtml = "<tr><td hidden='hidden'><input name='id'>-1</input></td><td><input type='checkbox' name='ckb'/></td><td>" + $("#Subscript").val() + "</td><td>" + $("#Time").val() + "</td><td>" + $("#RinseName").val() + "</td><td>" + $("#RinseAddress").val() + "</td><td>" + $("#Note").val() + "</td></tr>";
            addTr("opTable", -1, trHtml);
        } else {//修改
            
            $(trC).children('td').each(function (j) {  // 遍历 tr 的各个 td
                if (j == 2)//取低2行Name
                {
                    
                    $(this).text($("#Subscript").val());
                } else if (j == 3) {
                    $(this).text($("#Time").val());
                } else if (j == 4) {
                    $(this).text($("#RinseName").val());
                }
                else if (j == 5) {
                    $(this).text($("#RinseAddress").val());
                }
                else if (j == 6) {
                    $(this).text($("#Note").val());
                }
            });
        }

    }

    function addTr(tab, row, trHtml) {
        var $tr = $("#" + tab + " tr").eq(row);
        if ($tr.size() == 0) {
            alert("指定的table id或行数不存在！");
            return;
        }
        $tr.after(trHtml);
    }
    function delTr(ckb) {
        //获取选中的复选框，然后循环遍历删除
        var ckbs = $("input[name=" + ckb + "]:checked");
        if (ckbs.size() == 0) {
            alert("要删除指定行，需选中要删除的行！");
            return;
        }
        ckbs.each(function () {
            $(this).parent().parent().remove();
        });
    }

    function GetWorkItem() {
        var workItem = new Array();

        $('#opTable tr').each(function (i) {                   // 遍历 tr
            if (i == 0)
                return true;
            var model = new WorkItem();
            $(this).children('td').each(function (j) {  // 遍历 tr 的各个 td
                //alert("第" + (i + 1) + "行，第" + (j + 1) + "个td的值：" + $(this).text() + "。");
                if (j == 0)//取第0行的Id
                {
                    model.id = $(this).text();
                }
                else if (j == 2)//取低2行Name
                {
                    model.subscript = $(this).text();
                } else if (j == 3) {
                    model.time = $(this).text();
                } else if (j == 4) {
                    model.rinseName = $(this).text();
                }
                else if (j == 5) {
                    model.rinseAddress = $(this).text();
                }
                else if (j == 6) {
                    model.Note = $(this).text();
                }
            });
            workItem.push(model);
        });
        return workItem;
    }
    function LoadworkItem(data) {
        for (var i = 0; i < data.length; i++) {
            var trHtml = "<tr><td hidden='hidden'><input name='id'>" + data[i].id + "</input></td><td><input type='checkbox' name='ckb'/></td><td>" + data[i].subscript + "</td><td>" + data[i].time + "</td><td>" + data[i].rinseName + "</td><td>" + data[i].rinseAddress + "</td><td>" + data[i].Note + "</td></tr>";
            addTr("opTable", -1, trHtml);
        }
    }
</script>

<script>
    var WorkItem = (function () {
        function WorkItem() {
        }
        return WorkItem;
    }());
</script>
