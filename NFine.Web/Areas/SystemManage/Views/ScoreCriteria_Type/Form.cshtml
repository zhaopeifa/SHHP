@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}


<script>

    var keyValue = $.request("keyValue");
    $(function () {

        initControl();

        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/ScoreCriteria_Type/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });

    function initControl() {
        $("#SEntryId").bindSelect({
            url: "/SystemManage/ScoreCriteria_Entry/GetEnableGridJson",
            id: "Key",
            text: "Value"
        });


        $("#SEntryId").select2({
            language: 'zh-CN',//转为中文版

        });
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        $.submitForm({
            url: "/SystemManage/ScoreCriteria_Type/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">所属大类</th>
                <td class="formValue">
                    <input id="Name" name="Name" type="text" class="form-control required" placeholder="请输入名称" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">大类</th>
                <td class="formValue">
                    <select id="SEntryId" name="SEntryId" class="form-control required"></select>
                </td>
            </tr>
        </table>
    </div>
</form>
