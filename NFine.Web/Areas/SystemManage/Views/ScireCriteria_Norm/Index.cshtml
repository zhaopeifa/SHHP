@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script type="text/javascript">
    $(function () {
        $('#layout').layout();
        treeView();
        gridList();
    });
    function treeView() {
        $("#itemTree").treeview({
            url: "/SystemManage/ScireCriteria_Norm/GetTreeEnableJson",
            onnodeclick: function (item) {

                if (item.hasChildren == false) {
                    $("#txt_keyword").val('');
                    $('#btn_search').trigger("click");
                }
            }
        });
    }
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/SystemManage/ScireCriteria_Norm/GetGridJson",
            height: $(window).height() - 130,
            colModel: [
                { label: '主键', name: 'GroupId', hidden: true },
                {
                     label: '类型', name: 'IsDeduct', width: 60, align: 'left', sortable: false,
                     formatter: function (cellvalue, options, rowObject) {
                         return cellvalue ? "<span class=\"label label-default\">减分项</span>" : "<span class=\"label label-success\">加分项</span>";
                     }
                },
                { label: '检查项目', name: 'SNormProjectName', width: 400, align: 'left', sortable: false },
                { label: '评分标准', name: 'SNormStandardName', width: 450, align: 'left', sortable: false },
                {
                    label: '起扣条件', name: 'Condition', width: 20, align: 'left', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue + "处";
                    }
                }

            ],
            pager: "#gridPager",
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                url: "/SystemManage/ScireCriteria_Norm/GetGridJson",
                postData: { groupId: $("#itemTree").getCurrentNode().id, keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        verify();

        $.modalOpen({
            id: "Form",
            title: "新增评分标准详细",
            url: "/SystemManage/ScireCriteria_Norm/Form?classifygroupId=" + $("#itemTree").getCurrentNode().id,
            width: "400px",
            height: "280px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().GroupId;
        $.modalOpen({
            id: "Form",
            title: "修改评分标准明细",
            url: "/SystemManage/ScireCriteria_Norm/Form?normGroupId=" + keyValue,
            width: "400px",
            height: "280px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        verify();

        $.deleteForm({
            url: "/SystemManage/ScireCriteria_Norm/DeleteForm",
            param: { groupId: $("#gridList").jqGridRowValue().GroupId },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function verify() {
        var currNode = $("#itemTree").getCurrentNode();
        if (currNode == null) {
            $.modalMsg("请选择左侧评分标准小类节点在进行操作", "warning");
            return;
        }
        if (currNode.hasChildren) {
            $.modalMsg("请选择左侧最下层评分标准小类节点在进行操作", "warning");
            return;
        }

    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div id="itemTree"></div>
    </div>
    <div class="ui-layout-center">
        <div class="topPanel">
            <div class="toolbar">
                <div class="btn-group">
                    <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
                </div>
                <div class="btn-group">
                    <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建评分标准明细</a>
                </div>
                <div class="operate">
                    <ul class="nav nav-pills">
                        <li class="first">已选中<span>1</span>项</li>
                        <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改评分标准明细</a></li>
                        <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除评分标准明细</a></li>
                    </ul>
                    <a href="javascript:;" class="close"></a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
            <div class="search">
                <table>
                    <tr>
                        <td>
                            <div class="input-group">
                                <input id="txt_keyword" type="text" class="form-control" placeholder="名称" style="width: 200px;">
                                <span class="input-group-btn">
                                    <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridList"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>